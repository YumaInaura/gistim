#!/usr/bin/env ruby

require 'gistim'

subcommand = ARGV[0]

if subcommand == 'clone'
   hash = ARGV[1].match(/[a-z0-9]+\z/)[0]
   clone_directory = ARGV[2] || ''
  `git clone git@gist.github.com:#{hash} #{clone_directory}`
elsif subcommand == 'create'
  Gistim.implement(directory_name: ARGV[1])
else
  raise "Unknown subcommand #{subcommand}"
end

